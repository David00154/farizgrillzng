{% for key, values in this.products %}

	<div class="category" id="{{key}}">
		<div class="sub-title">
			<h3 class="mt-1">
				<span>{{key}}</span>
			</h3>
		</div>
		<div class="products">
			<div class="row">
				{% for item in values %}

					<div class="col-md-4 col-lg-3 box-product">
						<div class="box">
							<div class="row">
								<div class="col-6 col-md-12 box-1">
									<div class="image position-relative">
										<img src="{{item['images'][0]['src']}}" alt=" {{globals.remove_tags(item['short_description'])}} ">
									</div>
								</div>
								<div class="col-6 col-md-12 box-2">
									<div>
										<div class="title">{{item['name']}}</div>
										<div class="description">{{globals.remove_tags(item['short_description'])}}</div>
									</div>
									<div class="product-info">
										<div class="price">â‚¦{{item['price']}}</div>
										<div class="add-to-cart">
											<a href="javascript:void(0)" class="show-modal" data-product="30">
												<span class="desk">Add to cart</span>
												<span class="mob">Add</span>
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>

{% endfor %}
